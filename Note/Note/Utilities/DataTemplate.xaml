<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:vm="clr-namespace:Note.ViewModel"
                    xmlns:view="clr-namespace:Note.View">

    <DataTemplate DataType="{x:Type vm:HomeVM}">
        <view:Home />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:NoteVM }">
        <view:Notes />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:ReminderVM}">
        <view:Reminders />
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type vm:TaskVM}">
        <view:Tasks/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:PageVM}">
        <view:Page/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:BlankVM}">
        <view:Blank/>
    </DataTemplate>

    <DataTemplate DataType="{x:Type vm:miniNoteVM}">
        <view:miniNote/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:TrashVM}">
        <view:Trash/>
    </DataTemplate>
    <DataTemplate DataType="{x:Type vm:ArchivedVM}">
        <view:ArchiveNote/>
    </DataTemplate>
</ResourceDictionary>